.category-wrapper.data-v-5d1d6ff3 {
	width: 100%;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	position: absolute;
	top: 0;
	bottom: 0;
}
/* 左边小红点 */
.allcount.data-v-5d1d6ff3 {
	position: absolute;
	right: 6px;
	top: 8px;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	background-color: #f01414;
	color: #ffffff;
}
/* 左边 */
.left-wrapper.data-v-5d1d6ff3 {
	width: 200rpx;
	margin-bottom: 140rpx;
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 200rpx;
	        flex: 0 0 200rpx;
	background-color: #f4f4f4;
}
.left-content .title-content.data-v-5d1d6ff3 {
	width: 100%;
	height: 100rpx;
	font-size: 26rpx;
	border-bottom: 2rpx solid #E4E4E4;
}
.left-content .title-content.data-v-5d1d6ff3:last-child {
	border-bottom: 0;
}
/* 选中颜色 */
.onSelected.data-v-5d1d6ff3 {
	background-color: #fff;
	position: relative;
	color: #feb436;
}
.onSelected.data-v-5d1d6ff3::before {
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	width: 10rpx;
	height: 100%;
	background: -webkit-linear-gradient(326deg, #feb436 0%, #fb7c22 100%);
	background: linear-gradient(124deg, #feb436 0%, #fb7c22 100%);
}
/* 右边 */
.right-content.data-v-5d1d6ff3 {
	width: 100%;
